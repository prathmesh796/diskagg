{
    "manifest_version": 3,
    "name": "Kaggle Presence",
    "version": "1.0.0",
    "description": "Send your Kaggle activity to local RPC bridge to update Discord Rich Presence.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.kaggle.com/*"
    ],
    "icons": {
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.kaggle.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_title": "Kaggle Presence"
    }
}